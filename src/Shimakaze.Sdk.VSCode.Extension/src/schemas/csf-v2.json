{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CSF Json v2 schema",
  "definitions": {
    "csfSingleLineValue": {
      "type": "string",
      "description": "CSF值结构"
    },
    "csfExtraValue": {
      "type": "string",
      "pattern": "^[\\x20-\\x7E]*$",
      "description": "CSF额外值结构"
    },
    "csfMultiLineValue": {
      "type": "array",
      "description": "多行CSF值结构",
      "items": {
        "$ref": "#/definitions/csfSingleLineValue"
      }
    },
    "advancedCsfValue": {
      "type": "object",
      "description": "高级CSF值结构",
      "additionaProperties": false,
      "properties": {
        "value": {
          "oneOf": [
            {
              "$ref": "#/definitions/csfSingleLineValue"
            },
            {
              "$ref": "#/definitions/csfMultiLineValue"
            }
          ]
        },
        "extra": {
          "$ref": "#/definitions/csfExtraValue"
        }
      },
      "required": [
        "value"
      ]
    },
    "csfValueArray": {
      "type": "object",
      "description": "CSF值数组结构",
      "additionaProperties": false,
      "properties": {
        "values": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/csfSingleLineValue"
              },
              {
                "$ref": "#/definitions/csfMultiLineValue"
              },
              {
                "$ref": "#/definitions/advancedCsfValue"
              }
            ]
          }
        }
      },
      "required": [
        "values"
      ]
    },
    "csfValueRoot": {
      "oneOf": [
        {
          "$ref": "#/definitions/csfSingleLineValue"
        },
        {
          "$ref": "#/definitions/csfMultiLineValue"
        },
        {
          "$ref": "#/definitions/advancedCsfValue"
        },
        {
          "$ref": "#/definitions/csfValueArray"
        }
      ]
    }
  },
  "type": "object",
  "properties": {
    "protocol": {
      "type": "integer",
      "minimum": 2,
      "maximum": 2
    },
    "version": {
      "type": "integer",
      "minimum": 2,
      "maximum": 3
    },
    "language": {
      "oneOf": [
        {
          "type": "integer",
          "minimum": 0,
          "maximum": 9
        },
        {
          "type": "string",
          "enum": [
            "en_US",
            "en_UK",
            "de",
            "fr",
            "es",
            "it",
            "jp",
            "Jabberwockie",
            "kr",
            "zh"
          ]
        }
      ]
    },
    "data": {
      "type": "object",
      "description": "文件主体",
      "minProperties": 1,
      "maxProperties": 2147483647,
      "patternProperties": {
        "^[\\x20-\\x7E]*$": {
          "$ref": "#/definitions/csfValueRoot"
        }
      }
    }
  },
  "required": [
    "protocol",
    "data"
  ]
}
